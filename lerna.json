{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "npmClient": "pnpm",
  "version": "independent",
  "packages": ["packages/*", "apps/*"],
  "ignoreChanges": ["**/node_modules/**", "**/__snapshots__/**", "**/CHANGELOG.md"],
  "command": {
    "publish": {
      "conventionalCommits": false,
      "skipGit": true,
      "yes": true
    },
    "version": {
      "conventionalCommits": false,
      "skipGit": true
    }
  }
}
